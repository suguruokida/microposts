<div class="row">
  <%= link_to "followingsページ", followings_user_path(@user) %>
  <%= link_to "followersページ", followers_user_path(@user) %>
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <% if @user.location.present? %>
        <ul>
          <li>Location:<%= @user.location %></li>
        </ul>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>